<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".qrcodek.QrCodeKActivity">

        <ImageView
            android:id="@+id/scank_demo_img"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="12dp"
            android:background="@color/cok_blue_650"
            android:scaleType="centerCrop"
            android:src="@color/cok_blue_050" />

        <EditText
            android:id="@+id/scank_demo_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scank_demo_btn_create"
            style="@style/AbilityKStyle_Btn"
            android:text="生成QrCode"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            style="@style/AbilityKStyle_Btn"
            android:text="图片色彩比例"
            android:onClick="goScanKHSV"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <com.google.android.material.button.MaterialButton
            style="@style/AbilityKStyle_Btn"
            android:text="人脸识别"
            android:onClick="goScanKFace"
            tools:ignore="HardcodedText,UsingOnClickInXml" />
    </LinearLayout>
</layout>