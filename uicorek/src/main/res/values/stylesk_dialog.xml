<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="DialogK_Style_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">14dp</item>
        <item name="android:textColor">@color/cok_blue_666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogK_Style_BtnCancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:backgroundTint">@color/cok_blue_050</item>
        <item name="android:textColor">@color/cok_blue_666</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="DialogK_Style_BtnSure" parent="DialogK_Style_BtnCancel">
        <item name="android:backgroundTint">@color/cok_blue_650</item>
        <item name="android:textColor">@color/cok_blue_050</item>
    </style>
</resources>